<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VigenereCipher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_second</item>
        <item name="colorPrimaryVariant">@color/green_top</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_second</item>
        <item name="colorSecondaryVariant">@color/green_second_dark</item>
        <item name="colorOnSecondary">@color/green_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/green_top</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/grey1</item>
    </style>

    <style name="forButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey1</item>
        <item name="android:textColor">@color/green_main</item>
    </style>

    <style name="forTextBox">
        <item name="android:textColor">@color/grey1</item>
    </style>
    <style name="forTextBottonContainer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey1</item>
    </style>
</resources>